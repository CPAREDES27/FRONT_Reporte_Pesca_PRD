<mvc:View
    controllerName="com.tasa.reportetdcchd.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
    xmlns:t="sap.ui.table"
>
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                       
                                <form:Form width="100%" editable="true" visible="true">
                                    <form:title/>
                                    <form:formContainers>
                                        <form:FormContainer visible="true">
                                            <form:formElements>
                                                <form:FormElement visible="true">
                                                    <form:label>
                                                        <Label text="Marea" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                                    </form:label>
                                                    <form:fields>
                                                        <Input id="marea" type="Text" showValueHelp="false" enabled="true" visible="true" width="100%" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
                                                    </form:fields>
                                                </form:FormElement>
                                                <form:FormElement visible="true">
                                                    <form:label>
                                                        <Label text="Planta" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                                    </form:label>
                                                    <form:fields>
                                                        <Input id="planta" showValueHelp="false" width="100%" valueState="Information" valueStateText="Ingrese planta" showSuggestion="true" showTableSuggestionValueHelp="false" suggestionRows="{listMareas>/plantas}">
                                                    <suggestionColumns>
                                                        <Column>
                                                            <Label text="Planta" />
                                                        </Column>
                                                        <Column>
                                                            <Label text="Descripción" />
                                                        </Column>
                                                         <Column>
                                                            <Label text="Centro" />
                                                        </Column>
                                                    </suggestionColumns>
                                                    <suggestionRows>
                                                        <ColumnListItem>
                                                            <Label text="{listMareas>CDPTA}" />
					                                        <Label text="{listMareas>DESCR}" />
                                                            <Label text="{listMareas>WERKS}" />
                                                        </ColumnListItem>
                                                    </suggestionRows>
                                                </Input>
                                                    </form:fields>
                                                </form:FormElement>
                                                <form:FormElement visible="true">
                                                    <form:label>
                                                        <Label text="Embarcación" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                                    </form:label>
                                                    <form:fields>
                                                    <Input id="inputId0_R" placeholder="Seleccione embarcación" showValueHelp="true"  valueHelpRequest="onSearchHelp"/>
                                                        <!-- <Input id="embarcacion" showValueHelp="true" width="100%" valueStateText="Invalid entry" valueHelpRequest="onOpenEmba"/> -->
                                                    </form:fields>
                                                </form:FormElement>
                                                <form:FormElement visible="true">
                                                    <form:label>
                                                        <Label text="Inicio" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                                    </form:label>
                                                    <form:fields>
                                                        
                                                        <DateRangeSelection id="idDateRangeSelec" valueFormat="yyyyMMdd" displayFormat="dd/MM/yyyy" width="100%"/>
                                                    </form:fields>
                                                </form:FormElement>
                                                <form:FormElement visible="true">
                                                    <form:label>
                                                        <Label text="Cantidad de aciertos" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                                    </form:label>
                                                    <form:fields>
                                                        <Input id="numAciertos" value="200" type="Number" showValueHelp="false" enabled="true" visible="true" width="100%" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
                                                    </form:fields>
                                                </form:FormElement>
                                                <form:FormElement visible="true">
                                                    <form:label>
                                                        <Label text="" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                                    </form:label>
                                                    <form:fields>
                                                        <Button press="searchData" text="Buscar" type="Emphasized" icon="sap-icon://search" iconFirst="true" width="100%" enabled="true" visible="true" iconDensityAware="false"/>
                                                        <Button press="clearFields" text="Limpiar"  icon="sap-icon://clear-filter" iconFirst="true" width="100%" enabled="true" visible="true" iconDensityAware="false"/>
                                                    </form:fields>
                                                </form:FormElement>
                                            </form:formElements>
                                            <form:title/>
                                        </form:FormContainer>
                                    </form:formContainers>
                                    <form:layout>
                                        <form:ResponsiveGridLayout adjustLabelSpan="true" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12" singleContainerFullSize="true"/>
                                    </form:layout>
                                </form:Form>
                         
                        <t:Table id="tableData" rows="{listMareas>/items}" visibleRowCount="8" ariaLabelledBy="title" selectionMode="None">
                                    <t:extension>
					                    <OverflowToolbar style="Clear">
						                    <Title text="Lista de registros {/dataCount}" id="idListaReg"/>
                                            <ToolbarSpacer width=""/>
                                            <Button press='.exportarExcel' text="Exportar" icon="sap-icon://excel-attachment" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                                            <SearchField value="{ui>/globalFilter}" liveChange=".filterGlobally" placeholder="Búsqueda rápida" width="auto"/>
					                    </OverflowToolbar>
				                    </t:extension>
                                    <t:columns>
                                        <t:Column width="6rem" filterProperty="NRMAR" defaultFilterOperator="EQ" sortProperty="NRMAR">
						                    <Label text="Marea" />
						                    <t:template>
							                    <Text text="{listMareas>NRMAR}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="5rem" filterProperty="WERKS" defaultFilterOperator="Contains" sortProperty="WERKS">
						                    <Label text="Centro" />
						                    <t:template>
							                    <Text text="{listMareas>WERKS}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="8rem" filterProperty="DESCR" defaultFilterOperator="Contains" sortProperty="DESCR">
						                    <Label text="Planta" />
						                    <t:template>
							                    <Text text="{listMareas>DESCR}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="10rem" filterProperty="NMEMB" defaultFilterOperator="Contains" sortProperty="NMEMB">
						                    <Label text="Nombre Embarcación" />
						                    <t:template>
							                    <Text text="{listMareas>NMEMB}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="9rem" filterProperty="FHZAR" defaultFilterOperator="Contains">
						                    <Label text="Fecha Zarpe"/>
						                    <t:template>
							                    <Text text="{listMareas>FHZAR} {listMareas>HRZAR}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="9rem" filterProperty="FHLLE" defaultFilterOperator="Contains">
						                    <Label text="Llegada Zona" />
						                    <t:template>
							                    <Text text="{listMareas>FHLLE} {listMareas>HRLLE}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="9rem" filterProperty="FICAL" defaultFilterOperator="Contains">
						                    <Label text="Inicio Cala" />
						                    <t:template>
							                    <Text text="{listMareas>FICAL} {listMareas>HICAL}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="9rem" filterProperty="FFCAL" defaultFilterOperator="Contains">
						                    <Label text="Fin Cala" />
						                    <t:template>
							                    <Text text="{listMareas>FFCAL} {listMareas>HFCAL}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="9rem" filterProperty="FCSAZ" defaultFilterOperator="Contains">
						                    <Label text="Salida Zona" />
						                    <t:template>
							                    <Text text="{listMareas>FCSAZ} {listMareas>HRSAZ}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="9rem" filterProperty="FCARP" defaultFilterOperator="Contains">
						                    <Label text="Arribo Puerto"/>
						                    <t:template>
							                    <Text text="{listMareas>FCARP} {listMareas>HRARP}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="9rem" filterProperty="FIDES" defaultFilterOperator="Contains">
						                    <Label text="Inicio Descarga" />
						                    <t:template>
							                    <Text text="{listMareas>FIDES} {listMareas>HIDES}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="9rem" filterProperty="FFDES" defaultFilterOperator="Contains">
						                    <Label text="Fin Descarga" />
						                    <t:template>
							                    <Text text="{listMareas>FFDES} {listMareas>HFDES}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="6rem" hAlign="End" filterProperty="CNTDS" defaultFilterOperator="EQ" sortProperty="CNTDS">
						                    <Label text="Descargada" />
						                    <t:template>
							                    <Text text="{listMareas>CNTDS}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                     <t:columns>
                                        <t:Column width="6rem" hAlign="End" filterProperty="CNPDC" defaultFilterOperator="EQ" sortProperty="CNPDC">
						                    <Label text="Declarada" />
						                    <t:template>
							                    <Text text="{listMareas>CNPDC}" wrapping="false" />
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                    <t:columns>
                                        <t:Column width="7rem">
						                    <Label text="" />
						                    <t:template>
							                    <Button text="Detalle" press="showDetalle" type="Default" icon="sap-icon://detail-view" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
						                    </t:template>
					                    </t:Column>       
                                    </t:columns>
                                </t:Table>
                    </content>
                   
				</Page>
			</pages>
		</App>
</mvc:View>
